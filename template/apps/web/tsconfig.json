{
    "extends": "@acme/tsconfig/base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~*": ["./src/*"],
            "~public/*": ["./public/*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ],
        "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
    },
    "exclude": ["node_modules"],
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}