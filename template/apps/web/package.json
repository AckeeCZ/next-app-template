        "@types/react-dom": "19.0.1",
        "browserslist-config-ackee": "workspace:*",
        "dotenv": "16.4.7",
        "gitmoji-changelog": "^2.3.0",
        "type-fest": "^4.30.0",
        "typescript": "^5.7.2",
        "vitest": "^2.1.8"
